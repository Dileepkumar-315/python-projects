<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.StudentController"
            style="-fx-background-color: #f0f0f0;">
         
    <children>
        <VBox spacing="20.0" alignment="TOP_CENTER"
              AnchorPane.topAnchor="20.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              maxWidth="800"
              layoutX="0.0">
            
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <children>
            

                <Label text="Student Management System"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT"/>
                        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
                    </columnConstraints>
                    <children>
                        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                               style="-fx-text-fill: #333;" />
                        <TextField fx:id="nameField" promptText="Full Name"
                                   style="-fx-background-color: #ffffff; -fx-text-fill: #000; -fx-prompt-text-fill: #888;"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1" />

                        <Label text="Roll Number:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                               style="-fx-text-fill: #333;" />
                        <TextField fx:id="rollField" promptText="Roll Number"
                                   style="-fx-background-color: #ffffff; -fx-text-fill: #000; -fx-prompt-text-fill: #888;"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1" />

                        <Label text="Course:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                               style="-fx-text-fill: #333;" />
                        <TextField fx:id="courseField" promptText="Course"
                                   style="-fx-background-color: #ffffff; -fx-text-fill: #000; -fx-prompt-text-fill: #888;"
                                   GridPane.rowIndex="2" GridPane.columnIndex="1" />

                        <Label text="Semester:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                               style="-fx-text-fill: #333;" />
                        <TextField fx:id="semesterField" promptText="Semester"
                                   style="-fx-background-color: #ffffff; -fx-text-fill: #000; -fx-prompt-text-fill: #888;"
                                   GridPane.rowIndex="3" GridPane.columnIndex="1" />

                        <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0"
                               style="-fx-text-fill: #333;" />
                        <TextField fx:id="emailField" promptText="Email"
                                   style="-fx-background-color: #ffffff; -fx-text-fill: #000; -fx-prompt-text-fill: #888;"
                                   GridPane.rowIndex="4" GridPane.columnIndex="1" />

                        <Label text="Phone:" GridPane.rowIndex="5" GridPane.columnIndex="0"
                               style="-fx-text-fill: #333;" />
                        <TextField fx:id="phoneField" promptText="Phone Number"
                                   style="-fx-background-color: #ffffff; -fx-text-fill: #000; -fx-prompt-text-fill: #888;"
                                   GridPane.rowIndex="5" GridPane.columnIndex="1" />
                    </children>
                </GridPane>

                <HBox spacing="10" alignment="CENTER">
                    <children>
                        <Button text="Insert" onAction="#insertStudent"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                        <Button text="Update" onAction="#updateStudent"
                                style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
                        <Button text="Delete" onAction="#deleteStudent"
                                style="-fx-background-color: #f44336; -fx-text-fill: white;" />
                    </children>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Search:" style="-fx-text-fill: #333;" />
                        <TextField fx:id="searchField" promptText="Enter name or roll number..."
                                   style="-fx-background-color: #ffffff; -fx-text-fill: #000; -fx-prompt-text-fill: #888;" />
                        <Button text="Search" onAction="#handleSearch"
                                style="-fx-background-color: #FF9800; -fx-text-fill: white;" />
                        <Button text="Clear Table" onAction="#handleClearTable"
                                style="-fx-background-color: #607D8B; -fx-text-fill: white;" />
                        <Button text="View All" onAction="#loadStudents"
                                style="-fx-background-color: #9C27B0; -fx-text-fill: white;" />
                    </children>
                </HBox>

                <TableView fx:id="studentTable" prefHeight="300" prefWidth="700"
                           style="-fx-background-color: #ffffff; -fx-control-inner-background: #ffffff;">
                    <columns>
                        <TableColumn fx:id="nameCol" text="Name" prefWidth="100"/>
                        <TableColumn fx:id="rollCol" text="Roll No" prefWidth="100"/>
                        <TableColumn fx:id="courseCol" text="Course" prefWidth="100"/>
                        <TableColumn fx:id="semesterCol" text="Semester" prefWidth="80"/>
                        <TableColumn fx:id="emailCol" text="Email" prefWidth="150"/>
                        <TableColumn fx:id="phoneCol" text="Phone" prefWidth="100"/>
                    </columns>
                </TableView>

            </children>
        </VBox>
    </children>
</AnchorPane>
